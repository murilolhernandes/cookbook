<!-- Content heading -->
 <% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message block -->
<%- messages() %>

<% if (locals.errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%=error.msg %></li>
  <% }) %>
  </ul>
<% } %>

<!-- Form -->
<div class="form">
  <form id="loginForm" action="/account/login" method="post">
    <fieldset>
      <legend>Login</legend>
      <div class="information">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" title="Your email address" autocomplete="email" required value="<%= locals.email %>">

        <label for="password_hash">Password:</label>
        <input type="password" id="password_hash" name="password_hash" title="Password must be at least 8 characters, contain at least 1 capital letter." autocomplete="current-password" pattern="">
        <span id="show-password">Show Password</span>

        <input type="submit" value="Login">
        <p class="register">No account?
          <a href="/account/register">Sign-up</a>
        </p>
      </div>
    </fieldset>
  </form>
</div>